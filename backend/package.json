{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0 <17.0.0",
    "yarn": ">=1.22.17 <2.0.0"
  },
  "scripts": {
    "console": "yarn --cwd ../ prisma-repl",
    "build": "yarn tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "NO_PEER_DEPENDENCY_CHECK=true node dist/server",
    "dev": "ts-node-dev -r tsconfig-paths/register server --transpile-only",
    "db:format": "prisma format",
    "db:push": "prisma db push",
    "db:push:test": "dotenv -e .env.test prisma db push",
    "db:reflect": "prisma generate",
    "db:seed:prd": "NODE_ENV=production prisma db seed",
    "db:seed:dev": "NODE_ENV=development prisma db seed",
    "db:seed:test": "NODE_ENV=test dotenv -e .env.test prisma db seed",
    "tsc": "tsc",
    "test": "NODE_ENV=test dotenv -e .env.test -- jest --runInBand"
  },
  "prisma": {
    "seed": "ts-node-dev prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.112.0",
    "@aws-sdk/lib-storage": "^3.110.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^9.1.0",
    "@line/bot-sdk": "^7.5.0",
    "@prisma/client": "^3.15.2",
    "@sentry/node": "^7.1.1",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "cron": "^2.0.0",
    "fastify": "^4.0.3",
    "fastify-cli": "^4.1.1",
    "fastify-plugin": "^3.0.1",
    "graphql-relay": "^0.10.0",
    "json-bigint-patch": "^0.0.8",
    "jsonwebtoken": "^8.5.1",
    "mercurius": "^10.0.0",
    "mercurius-upload": "^5.0.0",
    "nexus": "^1.3.0",
    "nexus-prisma": "^0.35.0",
    "pino-pretty": "^8.0.0",
    "prisma": "^3.15.2",
    "prisma-repl": "^1.3.0",
    "sanitize-html": "^2.7.0",
    "ts-node-dev": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^2.0.0",
    "@types/graphql-relay": "^0.7.0",
    "@types/graphql-upload": "^8.0.11",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "@types/sanitize-html": "^2.6.2",
    "@types/uuid": "^8.3.4",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^5.1.0",
    "mercurius-integration-testing": "^5.0.0",
    "tsc-alias": "^1.6.9",
    "tsconfig-paths": "^4.0.0"
  }
}
