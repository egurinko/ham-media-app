{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "22.16.0",
    "pnpm": ">=10.12.1"
  },
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "console": "prisma-repl",
    "build": "pnpm tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "NO_PEER_DEPENDENCY_CHECK=true node dist/server",
    "dev": "ts-node-dev -r tsconfig-paths/register server --transpile-only",
    "db:format": "prisma format",
    "db:push": "prisma db push",
    "db:push:test": "dotenv -e .env.test prisma db push",
    "db:reflect": "prisma generate",
    "db:seed:prd": "NODE_ENV=production prisma db seed",
    "db:seed:dev": "NODE_ENV=development prisma db seed",
    "db:seed:test": "NODE_ENV=test dotenv -e .env.test prisma db seed",
    "lint": "eslint . --fix",
    "format": "prettier './**/*.{js,ts}'",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "tsc": "tsc",
    "tscheck": "pnpm tsc -p ./tsconfig.json --noEmit",
    "test": "NODE_ENV=test dotenv -e .env.test -- vitest",
    "test:ci": "NODE_ENV=test dotenv -e .env.test -- vitest --coverage.enabled true"
  },
  "prisma": {
    "seed": "ts-node-dev prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@aws-sdk/lib-storage": "^3.826.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@line/bot-sdk": "^10.0.0",
    "@prisma/client": "6.9.0",
    "@sentry/node": "^9.27.0",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.3.3",
    "fastify-cli": "^7.4.0",
    "fastify-healthcheck": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "graphql-relay": "^0.10.2",
    "graphql-scalars": "^1.24.2",
    "graphql-upload-minimal": "^1.6.1",
    "json-bigint-patch": "^0.0.8",
    "jsonwebtoken": "^9.0.2",
    "mercurius": "^16.1.0",
    "mercurius-upload": "^8.0.0",
    "nexus": "^1.3.0",
    "nexus-prisma": "^2.0.8",
    "node-cron": "^4.1.0",
    "pino-pretty": "^13.0.0",
    "prisma": "6.9.0",
    "prisma-repl": "^1.4.0",
    "sanitize-html": "^2.17.0",
    "ts-node-dev": "^2.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/graphql-relay": "^0.7.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.15.30",
    "@types/node-cron": "^3.0.11",
    "@types/sanitize-html": "^2.16.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "graphql-tag": "^2.12.6",
    "mercurius-integration-testing": "^9.0.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^3.2.2"
  }
}
